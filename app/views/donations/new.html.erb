<h2>Donate to <%= @organization.facebook_id %></h2>
<%= form_for @donation do |f| %>
  <div>
    <%= f.label "Amount $" %>
    <%= f.text_field :amount, :size => 8, :value => '5.0' %>
  </div>
  <%= f.hidden_field :organization_id, :value => @organization.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>  
  <%= f.submit "Submit", :class => "btn-primary btn-lg" %>  
<% end %>
